    <div style="background-color:rgba(0,0,0,0.5);padding:30px 20px;text-align:center;">
      <span style="font-size:28px;font-weight:900;color:#ffffff;text-transform:uppercase;letter-spacing:2px;text-shadow:0 2px 4px rgba(0,0,0,0.3);">
        {{ category.label() }}
